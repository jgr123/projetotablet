<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CadastrarCliente" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    
<RelativeLayout
 	android:layout_width="fill_parent"
    android:layout_height="fill_parent"
       >
 
	<TableLayout
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
	    <TableRow>
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Registro"/>
	        <EditText 
	            android:id="@+id/registro"
	            android:layout_width="100dp"
	            android:layout_height="wrap_content"/>
	    </TableRow>
	    
	    <TableRow>
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Nome"/>
	        <EditText 
	            android:id="@+id/nome"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"/>
	    </TableRow>
	    
	    <TableRow>
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Contato"/>
	        <EditText 
	            android:id="@+id/contato"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"/>
	    </TableRow>
	    
	    <TableRow>
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="EndereÃ§o"/>
	        <EditText 
	            android:id="@+id/endereco"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"/>
	    </TableRow>
	    
	    <TableRow>
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Complemento"/>
	        <EditText 
	            android:id="@+id/complemento"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"/>
	    </TableRow>
	    
	    <TableRow>
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Cidade"/>
	        <EditText 
	            android:id="@+id/cidade"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"/>
	    </TableRow>
	    
	    <TableRow>
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Estado"/>
	        <EditText 
	            android:id="@+id/estado"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"/>
	    </TableRow>
	    
	    <TableRow>
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="CEP"/>
	        <EditText 
	            android:id="@+id/cep"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"/>
	    </TableRow>
	    
	    <TableRow>
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Fone"/>
	        <EditText 
	            android:id="@+id/fone"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"/>
	    </TableRow>
	    
	    <TableRow>
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Fax"/>
	        <EditText 
	            android:id="@+id/fax"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"/>
	    </TableRow>
	    
	    <TableRow>
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="E-mail"/>
	        <EditText 
	            android:id="@+id/email"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"/>
	    </TableRow>
	    
	    <TableRow>
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Cli-For"/>
	        <EditText 
	            android:id="@+id/clifor"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"/>
	    </TableRow>
	    
	    <TableRow>
	        <Button
	            android:id="@+id/btncadastracontato" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Cadastrar"
	            android:onClick="cadastrar"/>
	        <Button 
	            android:id="@+id/btncancelacontato"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Cancelar"
	            android:onClick="goToClientes"/>
	    </TableRow>
	</TableLayout>	 
		 
	<TextView android:id="@+id/contatos"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"/>"
		 

</RelativeLayout>
</ScrollView>